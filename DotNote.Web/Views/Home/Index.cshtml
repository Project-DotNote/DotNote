else
{
    <body>
        <div class="background-img">
            <div class="calendar">
                <header>
                    <h3></h3>
                    <nav>
                        <button id="prev"></button>
                        <button id="next"></button>
                    </nav>
                </header>
                <section>
                    <ul class="days">
                        <li>Sun</li>
                        <li>Mon</li>
                        <li>Tue</li>
                        <li>Wed</li>
                        <li>Thu</li>
                        <li>Fri</li>
                        <li>Sat</li>
                    </ul>
                    <ul class="dates"></ul>
                </section>
            </div>
            <div class="title">
                <h1>
                    <img class="person" src="/img/home/person.png" />
                    Personal Dashboard
                </h1>
            </div>
        </div>
        <div class="latest-notes">
            <h3>Latest Notes</h3>
            <div class="row">
            @for (int i = 0; i < notes.Count; i++)
            {
                var note = notes[i];
                <div class="col-md-3 mx-5 mb-5 d-grid gap-3 d-md-flex justify-content-lg-between bg-warning">
                    <div class="card-body" style="height: 18rem; width: 8rem">
                        <h5 class="card-title text-center">@note.Title</h5>
                        <h6 class="card-title text-center">@note.Subtitle</h6>
                        <p class="card-text">@note.Text</p>
                    </div>
                </div>
            }
            </div>
        </div>
    </body>
}
